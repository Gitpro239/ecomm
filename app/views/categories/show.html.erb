<h1 class="font-bold text-center text-3xl">Category Show Page</h1>
<div class="min-h-screen flex justify-center ">
    <div class="flex flex-wrap flex-col mt-6">
       <h2 class="text-lg text-gray-800 font-bold">Filter</h2>

        <%= form_with url: category_path(@category), method: :get, class: "flex flex-col" do |form| %>
        <%= form.text_field :min, placeholder: "Min Price", class: "border border-gray-800 rounnded-md p-2 w-32" %>
        <%= form.text_field :max, placeholder: "Max Price", class: "border border-gray-800 rounnded-md mt-2 p-2 w-32" %>
        <%= form.submit "Filter", class: "cursor-pointer bg-gray-800 text-white rounded-md p-2 mt-2" %>
        <% end %>
        <%= form_with url: category_path(@category), method: :get, class: "flex flex-col" do |form| %>
        <%= form.submit "Clear", class: "cursor-pointer bg-gray-800 text-white rounded-md p-2 mt-2" %> 
        <% end %> 

    </div>

    <div class="flex flex-wrap mt-6 gap-10 flex-grow justify-center items-center">
     <% if @products.empty? %>
        <p class="text-2xl text-left text-gray-800">No Products Found</p>
     <% else %>
          <% @products.each do |product| %>
             <%= link_to product_path(product) do %>
               <div class="max-w-xs flex flex-col p-4 justify-center items-center">
                  <%# <%= product.images.first ? image_tag(product.images, class: "rounded") : image_tag("http://via.placeholder.com/250", class: "rounded") %> 
                  <%= product.images.first ? image_tag(product.images.first.variant(:medium), class: "rounded") : image_tag("http://via.placeholder.com/250", class: "rounded")%>
               </div>
             <p class="mt-6 font-medium text-gray-800"> <%= product.name %> </p>
             <% end %>
          <% end %>
     <% end %>
    </div>

</div>

